# Production Environment Configuration for Notification System
# Copy this file to .env.production and fill in your actual values

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# VAPID Keys for Push Notifications
# Generate these using: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your-vapid-public-key-here
VAPID_PRIVATE_KEY=your-vapid-private-key-here
VAPID_SUBJECT=mailto:your-email@example.com

# Notification Configuration
VITE_NOTIFICATION_ENCRYPTION_KEY=your-encryption-key-here
VITE_MAX_NOTIFICATION_RETRIES=3
VITE_NOTIFICATION_BATCH_SIZE=50
VITE_NOTIFICATION_RATE_LIMIT=100

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_METRICS_COLLECTION_INTERVAL=300000

# Security Settings
VITE_ENABLE_NOTIFICATION_ENCRYPTION=true
VITE_REQUIRE_USER_CONSENT=true
VITE_DATA_RETENTION_DAYS=365

# Feature Flags
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_NOTIFICATION_ANALYTICS=true
VITE_ENABLE_BATCH_NOTIFICATIONS=true
VITE_ENABLE_QUIET_HOURS=true

# External Services (Optional)
VITE_ANALYTICS_ENDPOINT=https://your-analytics-service.com/api
VITE_ERROR_REPORTING_DSN=https://your-error-reporting-service.com

# Development/Debug Settings (set to false in production)
VITE_DEBUG_NOTIFICATIONS=false
VITE_MOCK_PUSH_SERVICE=false
VITE_ENABLE_NOTIFICATION_LOGS=false