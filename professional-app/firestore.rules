rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(professionalId) {
      return request.auth.uid == professionalId;
    }

    // Users collection - allow authenticated users to read
    match /usuarios/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Users collection (alternate name)
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Profiles collection
    match /profiles/{profileId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Patients collection - any authenticated user can read
    match /patients/{patientId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Professionals collection
    match /professionals/{professionalId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Appointments collection
    match /appointments/{appointmentId} {
      allow read, write: if isAuthenticated();
    }

    // Evolutions collection
    match /evolutions/{evolutionId} {
      allow read, write: if isAuthenticated();
    }

    // Treatment Protocols
    match /treatment_protocols/{protocolId} {
      // Anyone authenticated can read protocols
      allow read: if isAuthenticated();

      // Only authenticated users can create protocols
      // Must set professionalId to their own uid
      allow create: if isAuthenticated() &&
                      request.resource.data.professionalId == request.auth.uid;

      // Only owner can update or delete their protocols
      allow update, delete: if isAuthenticated() &&
                              isOwner(resource.data.professionalId);
    }

    // Patient Protocols (protocols applied to patients)
    match /patient_protocols/{patientProtocolId} {
      // Anyone authenticated can read patient protocols
      allow read: if isAuthenticated();

      // Only authenticated users can create patient protocols
      // Must set professionalId to their own uid
      allow create: if isAuthenticated() &&
                      request.resource.data.professionalId == request.auth.uid;

      // Only owner can update or delete patient protocols
      allow update, delete: if isAuthenticated() &&
                              isOwner(resource.data.professionalId);
    }

    // Financial records
    match /patient_financial_records/{recordId} {
      allow read, write: if isAuthenticated();
    }

    // Sessions
    match /sessions/{sessionId} {
      allow read, write: if isAuthenticated();
    }

    // Organizations
    match /organizations/{organizationId} {
      allow read: if isAuthenticated();
    }

    // Default: deny everything else
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
