{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@mobile/*": ["./*"],
      "@fisioflow/ui": ["../packages/ui/src/index.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "../packages/ui/src/**/*.ts",
    "../packages/ui/src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}