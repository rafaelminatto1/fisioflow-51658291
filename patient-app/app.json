{
  "expo": {
    "name": "FisioFlow Paciente",
    "slug": "fisioflow-patient",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "fisioflow",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "platforms": ["ios", "android", "web"],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D9488"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rafaelminatto.fisioflow",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Permitir acesso a camera para fotos de perfil e exercicios",
        "NSPhotoLibraryUsageDescription": "Permitir acesso a galeria para selecionar fotos",
        "NSMicrophoneUsageDescription": "Permitir acesso ao microfone para gravar videos de exercicios"
      },
      "config": {
        "usesNonExemptEncryption": false
      },
      "android": {
        "adaptiveIcon": {
          "foregroundImage": "./assets/adaptive-icon.png",
          "backgroundColor": "#0D9488"
        },
        "package": "com.fisioflow.patient"
      },
      "plugins": [
        "expo-router",
        "expo-secure-store",
        [
          "expo-notifications",
          {
            "icon": "./assets/notification-icon.png",
            "color": "#0D9488"
          }
        ]
      ],
      "experiments": {
        "typedRoutes": true,
        "asyncRoutes": true
      },
      "extra": {
        "router": {
          "origin": false
        },
        "eas": {
          "projectId": "3dc7141f-4e97-4c2c-b4aa-959888a0e810"
        }
      },
      "owner": "rafaelminatto"
    }
  }
}
