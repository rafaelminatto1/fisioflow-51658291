{
  "expo": {
    "name": "FisioFlow Paciente",
    "slug": "fisioflow-patient",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "fisioflow",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "platforms": ["ios", "android", "web"],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D9488"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rafaelminatto.fisioflow",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Permitir acesso a camera para fotos de perfil e exercicios",
        "NSPhotoLibraryUsageDescription": "Permitir acesso a galeria para selecionar fotos",
        "NSMicrophoneUsageDescription": "Permitir acesso ao microfone para gravar videos de exercicios"
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0D9488"
      },
      "package": "com.fisioflow.patient"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#0D9488"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "8e006901-c021-464d-bbcd-96d821ab62d0"
      }
    },
    "owner": "rafaelminatto"
  }
}
